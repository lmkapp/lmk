{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "noEmit": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "target": "es2015",
    "sourceMap": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
